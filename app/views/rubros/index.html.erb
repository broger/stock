<div  id="botonera" >   
    <!-- <span class="glyphicon glyphicon-search" style="color:#000000; border:1px; padding:6px 0px 6px 6px; font-size:18px" title="buscar producto"></span>
     <span class="glyphicon glyphicon-arrow-left" style="color:#000000; padding:6px 0px 6px 6px; font-size:18px" title="atras"></span>
    -->
</div>
 <%= form_tag(rubros_path, :method => 'get',:id=>'buscar') %>  
  <div id="titulo" style="width:100%; background-color:#53B9E9; color: #ffffff" >
    <div class="container" ><h1>Rubros</h1></div>  
  </div>
  <div id="herramientas" >
    <div class="container">
      <div id="cargando"   style="display: none; float:left">&nbsp;<%= image_tag('iconos/loader.gif')%></div>
      <%= text_field_tag :txtbuscar, params[:txtbuscar] ,:placeholder => 'buscar ...', :style=> "border:0px; padding:2px 4px 2px 4px; display:inline"%>
      <i class="glyphicon glyphicon-align-justify" onClick="mostrarTodos()" style="color:#ffffff; font-size:16px;padding-left:4px" title="mostrar todos"></i>
    </div>
  </div>

  <div class="container">
  <div class="row" >
     <div id="menu_izquierdo"  class="col-sm-2" >
       <!-- ACORDENON -->
       <div class="panel-group" id="accordion" style="background-color:#2B2B2B">
           <div class="panel panel-default">
                   <div class="panel-heading">
                        <h4 class="panel-title" >
                          <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                              <i class="glyphicon glyphicon-align-justify" style="padding-right:6px" ></i>
                              Registros
                          </a>
                        </h4>
                   </div>
                   <div id="collapseOne" class="panel-collapse collapse in">
                       <div class="panel-body">
                          <ul>
                            <li><%= link_to 'Nuevo rubro', new_rubro_path, :class=>'fancybox', :style=>'color:black; font-size:11px' %></li>
                          </ul>
                        </div>
                    </div>
           </div>
           <div class="panel panel-default">
                   <div class="panel-heading" style="background-color:#2197C9">
                        <h4 class="panel-title"   style="background-color:#2197C9" >
                          <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
                                <i class="glyphicon glyphicon-file" style="padding-right:6px"></i>
                                Reportes
                          </a>
                        </h4>
                   </div>
                   <div id="collapseTwo" class="panel-collapse collapse">
                      <div class="panel-body">
                        <ul>
                           <li>Todos</li>
                        </ul>  
                      </div>
                   </div>
           </div>
           <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                           <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseThree">
                              <i class="glyphicon glyphicon-th-list" style="padding-right:6px"></i>
                              Tablas Relacionadas
                           </a>
                        </h4>
                    </div>
                    <div id="collapseThree" class="panel-collapse collapse">
                      <div class="panel-body">
                        <ul>
                           <li>Provincias</li>
                        </ul>  
                      </div>
                    </div>
           </div>
      </div>


     </div>
     <div  id="contenido"  class="col-sm-10"  >
            
                       <% unless @rubros.blank? %>
                        <table class="table" style="font-size :13px" >
                                <thead>
                                  <tr style="height:12px">
                                  <th>Nombre</th>
                                  <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                <% @rubros.each do |rubro| %>
                                  <tr style="height:9px">
                                      <td><%=h rubro.nombre %></td>
                                      <td style="text-align:right">
                                             <%= link_to image_tag('iconos/16x16/zoom.png'), rubro, :title=>'Ver', :class=>'fancybox' %>
                                                <%= link_to image_tag('iconos/16x16/editar.png'), edit_rubro_path(rubro), :title=>'Editar', :class=>'fancybox' %>
                                                <%= link_to image_tag('iconos/16x16/delete.png'), rubro, :title=>'Eliminar',
                                                  :confirm => 'Esta Seguro?', :method => :delete %>
                                      </td>
                                    </tr>
                                <% end %>
                                </tbody>
                            </table>
                        <%else%>
                              <div style="text-align:center; margin-top:10px">
                                   <i><%= button_to_function "Lo sentimos #{current_user.login}, no encontramos resultados para: #{@busqueda}, modifiquelo y vuelva a intentar suerte!", "mostrarTodos()", :class=>"btn btn-default", :style=>"text-decoratio" %></div></i>
                              </div>  
                         <%end%>
                      
                       <div style="text-align:center" >
                          <%= will_paginate @rubros, :previous_label => '<< Anterior', :next_label => 'Siguiente >>'%>
                        
                       </div>
     </div>
 </div>
</div>
  
 
<script type="text/javascript">

    $(document).ready(function () {
         definir_fancy(400,360);

         $('#txtbuscar').focus();
         console.log();
         $('#buscar').submit(icon_loading);

    });

    $("table").tablecloth({
      theme: "default",
      bordered: true,
      condensed: true,
      striped: false, // linea par gris impar blanca
      sortable: true,  // algo de jquery
      clean: false,
      cleanElements: "th td",
      customClass: "my-table"
    });



    function icon_loading(){
          if ( $('#txtbuscar') != '' && $('#buscar').valid()){
                $('#cargando').show();
          }
    }

    function mostrarTodos(){
          $('#txtbuscar').text('');
          $('#txtbuscar').val('');
          $('#buscar').submit();
                   
    }

</script>

