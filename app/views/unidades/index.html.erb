<h1>Listing unidades</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Abreviatura</th>
  </tr>

<% @unidades.each do |unidad| %>
  <tr>
    <td><%=h unidad.nombre %></td>
    <td><%=h unidad.abreviatura %></td>
    <td><%= link_to 'Show', unidad %></td>
    <td><%= link_to 'Edit', edit_unidad_path(unidad) %></td>
    <td><%= link_to 'Destroy', unidad, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New unidad', new_unidad_path %>