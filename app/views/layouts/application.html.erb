             </div>
      </div>
      <div class="row" >
            <div  id="noticias" class="col-sm-12" >
               <%if flash[:notice]%>
              <div class="alert alert-warning fade in" style="width:80%">
                     <button type="button" class="close" data-dismiss="alert">&times;</button><%= flash[:notice] %></div>
                  </div>
               <%end%>
               <%if flash[:error]%>
                 <div class="alert alert-error"><button type="button" class="close" data-dismiss="alert">&times;</button><%= flash[:error] %></div>
              <%end%>
            </div>
     </div>


