<h3>Nueva Secci&oacute;n</h3> <br />

<% form_for(@seccion) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nombre %>
    <%= f.text_field :nombre %><br />
  </p>

  <p>
    <%= f.label :rubro %>
    <%= f.select :rubro_id, Rubro.find(:all).collect{|t|[t.nombre, t.id]}, {:include_blank => true} %><br />
  </p>

  <p>
    <%= f.submit 'Guardar', :class=>"btn btn-primary"%> | <%= link_to 'volver', secciones_path %>
  </p>

<% end %>

  <br />
  



<script type="text/javascript">

      $(document).ready(function(){
           $(".new_seccion").validate({
            rules: {
                    "seccion[nombre]": {required: true, minlength: 3, maxlength:60},
                    "seccion[rubro_id]": {required: true}
                    }
          });

      });

</script>
  