<h1>Nueva Secci&oacute:n </h1>

<% form_for(@seccion ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :rubro_id %><br />
    <%= f.select :rubro_id, Rubro.find(:all).collect{|t|[t.nombre, t.id]}, {:include_blank => true} %>

  </p>
   <p>
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </p>
  <p>
    <%= f.submit 'Guardar' %> | <%= link_to 'atras', secciones_path %>
  </p>
<% end %>




  <script type="text/javascript">
  $(document).ready(function(){
    $("#new_seccion ").validate({
      rules: {
              "seccion [nombre]": {required: true, minlength: 3, maxlength:30},
              "seccion [rubroprovincia_id]": {required: true, minlength: 1, maxlength:60}
              }
    });

});
</script>


