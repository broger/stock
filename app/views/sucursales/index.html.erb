<h1>Listing sucursales</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Direccion</th>
    <th>Telefono</th>
    <th>Localidad</th>
    <th>Provincia</th>
  </tr>

<% @sucursales.each do |sucursal| %>
  <tr>
    <td><%=h sucursal.nombre %></td>
    <td><%=h sucursal.direccion %></td>
    <td><%=h sucursal.telefono %></td>
    <td><%=h sucursal.localidad_id %></td>
    <td><%=h sucursal.provincia_id %></td>
    <td><%= link_to 'Show', sucursal %></td>
    <td><%= link_to 'Edit', edit_sucursal_path(sucursal) %></td>
    <td><%= link_to 'Destroy', sucursal, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New sucursal', new_sucursal_path %>