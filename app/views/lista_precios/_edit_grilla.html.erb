
<% unless @productos.blank? %>

      <div  class= "cuadro-scroll" >
          <table>
              <thead>
                <tr style="height:12px">
                  <th>codigo</th>
                  <th>nombre</th>
                  <th>marca</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
              <% @productos.each do |producto| %>
                <tr >
                    <td><%=h producto.codigo %></td>
                    <td><%=h producto.nombre %></td>
                    <td><%=h producto.marca.nombre %></td>
                    <td style="text-align:right; padding-right:10px">
                           <%= link_to image_tag('iconos/16x16/zoom.png'), producto, :title=>'Ver', :class=>'fancybox' %>
                              <%= link_to image_tag('iconos/16x16/editar.png'), edit_producto_path(producto), :title=>'Editar',:class=>'qtip' %>
                              <%= link_to image_tag('iconos/16x16/delete.png'), producto, :title=>'Eliminar',:class=>'qtip', :confirm => 'Esta Seguro?', :method => :delete %>
                    </td>
                  </tr>
              <% end %>
              </tbody> 
          </table>
      </div>
      <div style="text-align:center">
            <%= will_paginate @productos, :previous_label => '<< Anterior &nbsp;', :next_label => '&nbsp; Siguiente >>'%>
      </div>


  <%else%>
           <div style="margin: 40px 0 0 20px; font-style: oblique"><h5><font color="red">No se encontraron resultados, modifique sus parametros de busqueda y vuelva a intenar Suerte!!</font></h5></div>
            
  <%end%>






