<h1>Listing roles</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Activo</th>
    <th>Administrador</th>
  </tr>

<% @roles.each do |rol| %>
  <tr>
    <td><%=h rol.nombre %></td>
    <td><%=h rol.activo %></td>
    <td><%=h rol.administrador %></td>
    <td><%= link_to 'Show', rol %></td>
    <td><%= link_to 'Edit', edit_rol_path(rol) %></td>
    <td><%= link_to 'Destroy', rol, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New rol', new_rol_path %>