    $(document).ready(function () {

        $('#obs').hide();
        $('#ocultar_obs').hide();
        $('#error_detalle').hide();
        $('#deposito_id').change(cargar_dep_destino); 
        $('#deposito_destino_id').change(eliminar_detalle); 
        $('#numero').attr('readonly', true);
        $("#comprobante").validate({
             rules: {
             "numero":{required:true, digits:true},
