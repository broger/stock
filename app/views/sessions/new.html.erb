        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h4>Error!</h4>
        <%= flash[:error] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div >
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% end %>
  
