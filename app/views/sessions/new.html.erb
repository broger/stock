<% form_tag session_path do -%>
    <h4 style="color:#ffffff; margin-botton:20px">Ingrese sus datos</h4>
      
      <% if flash[:error] %>
      <div class="alert alert-block alert-error"; style="background-color:rgba(250,250,250, 0.18)">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h5><b>Error!</b></h5>
        <%= flash[:error] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="alert alert-block alert-error"; style="background-color:rgba(250,250,250, 0.18)">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% end %>
  
 
    <%= text_field_tag 'login', @login, :placeholder => "usuario", :style=>'width:100%; font-size:14px;height:30px; padding-left:4px; margin:15px 0 0 0'%>
