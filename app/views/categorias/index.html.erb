<h3 style="margin-top:0px; margin-bottom: 15px">Categorias</h3>


    <%= form_tag(categorias_path, :method => 'get',:id=>'buscar') %>

  <table>
     <tr>
       <td><%= text_field_tag :txtbuscar, params[:txtbuscar] ,:size=>40,:placeholder => 'buscar ...', :class=>"textbox1"%></td>
       <td>&nbsp;<%= submit_tag "Buscar", :class=>"btn btn-mini"%></td>
       <td><div id="cargando"   style="display: none;">&nbsp;<%= image_tag('iconos/cargando.gif')%></div></td>
     </tr>

  </table>
<div id="tips" style="color:gray; height:10px; margin: 0 0 25px 2px; font-size: 10px">&nbsp;<strong>Tip:</strong> Puede ingresar alguna porci&oacute;n del nombre de la categoria.</div>

  
 <% unless @categorias.blank? %>
  <table class="table" style="font-size :13px" >
          <thead>
            <tr style="height:12px">
            <th>Nombre</th>
            <th>Secci&oacute;n</th>
            <th>Rubro</th>
          </tr>
          </thead>
          <tbody>
          <% @categorias.each do |categoria| %>
            <tr style="height:9px">
                <td><%=h categoria.nombre %></td>
                <td><%=h categoria.seccion.nombre %></td>
                <td><%=h categoria.rubro.nombre %></td>
                <td style="text-align:right">
                       <%= link_to image_tag('iconos/zoom2.png'), categoria, :title=>'Ver', :class=>'fancybox' %>
                          <%= link_to image_tag('iconos/16x16/pencil.png'), edit_categoria_path(categoria), :title=>'Editar',:class=>'qtip' %>
                          <%= link_to image_tag('iconos/16x16/remove.png'), categoria, :title=>'Eliminar',:class=>'qtip', :confirm => 'Esta Seguro?', :method => :delete %>
                </td>
              </tr>
          <% end %>
          </tbody>
  <%else%>
            <tr>
              <td><div><h3><font color="red">No se encontraron resultados</font></h3></div></td>
            </tr>
   <%end%>
</table>
 <div style="text-align:center; font-size:13px">
    <%= will_paginate @categorias, :previous_label => '<< Anterior', :next_label => 'Siguiente >>'%>
  </div>

<br />
<br />

 <%= link_to 'Nueva categoria', new_categoria_path ,:class=>'btn btn-primary' %>


<script type="text/javascript">

    $(document).ready(function () {
         $('#txtbuscar').focus();
         console.log();
         $('#buscar').submit(controlar_bene);

         // Set custom style, close if clicked, change title type and overlay color


    });

    function controlar_bene(){
          if ( $('#txtbuscar') != '' && $('#buscar').valid()){
                $('#cargando').show();
          }
}


</script>


