            </ul>

            <div id="myTabContent" class="tab-content">
                      <div class="tab-pane fade" id="general">
                                         <table>
                                              <tr>
                                                <td><%= f.label :codigo %></td>
                                                <td> <%  Producto.count >= 1  ? "#{Producto.last.id.to_i + 1}" : "0"  %></td>
