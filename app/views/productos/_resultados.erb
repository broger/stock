    table{
      font-size: 11px;
    }
    
    table td{
      padding: 0px
    }
    .tabla_prod > table > tr > td{
        font-size: 11px;
    }
    table-condensed tbody > tr > td, .table-condensed tfoot > tr > td {
      padding: 2px;
