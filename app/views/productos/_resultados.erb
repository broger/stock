
<% unless @productos.blank? %>

      <div  class= "cuadro-scroll" >
          <table >
              <thead>
                <tr style="height:12px; font-size:12px">
                  <th>codigo</th>
                  <th>nombre</th>
                  <th>stock local</th>
                  <th>stock</th>
                  <th>unidad</th>
                  <th>marca</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
              <% @productos.each do |producto| %>
                <tr >
                    <td onclick="ver_registro()" style="cursor: pointer"><%=h producto.codigo %></td>
                    <td><%=h producto.nombre %></td>
                    <td><%=h ProductoStock.find(:first, :conditions=>['deposito_id = ? and producto_id = ?',current_user.sucursal.deposito.id, producto.id]).stock %></td>
                    <td><%=h producto.stock %></td>
                    <td><%=h producto.unidad.nombre %></td>
                    <td><%=h producto.marca.nombre %></td>
                    <td style="text-align:right">
                          <%= link_to "<i class='glyphicon glyphicon-search' style='font-size: 13px; color:black' ></i>", producto, :title=>'Ver', :class=>"fancybox", :id=>'ver' %>
                         <%= link_to "<i class='glyphicon glyphicon-pencil' style='font-size: 13px; color:black' ></i>", edit_producto_path(producto), :title=>'Editar' %>
                         <%= link_to "<i class='glyphicon glyphicon-trash' style='font-size: 13px; color:black; margin-right:12px' ></i>", producto, :title=>'Eliminar', :confirm => 'Esta Seguro?', :method => :delete %>
                    </td>
                  </tr>
              <% end %>
              </tbody> 
          </table>
      </div>
      <div style="text-align:center">
            <%= will_paginate @productos, :previous_label => '<< Anterior &nbsp;', :next_label => '&nbsp; Siguiente >>'%>
      </div>


  <%else%>
           <div style="margin: 40px 0 0 20px; font-style: oblique"><h5><font color="red">No se encontraron resultados, modifique sus parametros de busqueda y vuelva a intenar Suerte!!</font></h5></div>
            
  <%end%>




<script type="text/javascript">
  
      function ver_registro(){

         $('#ver').click();

      }


</script>

