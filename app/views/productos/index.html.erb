<h1>Listing productos</h1>

<div class="filtros" style="display: none">
  <table>
     <tr>
       <td><%= select_tag :tipo_tramite_id,'<option></option>' + options_from_collection_for_select(Categoria.find(:all, :order => "nombre"),'id','nombre') if Categoria.count > 1 %>
   </td>
       <td><div style="display: none;"><%= submit_tag "Buscar" %></div></td>
       <td><div id="cargando"   style="display: none;">&nbsp;<%= image_tag('iconos/cargando.gif')%></div></td>
     </tr>

  </table>
 </div>

<div class="search_simple">
  <table>
     <tr>
       <td><%= text_field_tag :txtbuscar, params[:txtbuscar] ,:size=>40,:placeholder => 'buscar ...'%></td>
       <td><div style="display: none;"><%= submit_tag "Buscar" %></div></td>
       <td><div id="cargando"   style="display: none;">&nbsp;<%= image_tag('iconos/cargando.gif')%></div></td>
       <td>
           <div id="ver_filtros" onclick="ver_filtros()">ver filtros</div>
           <div id="ocultar_filtros" onclick="ocultar_filtros()" style="display:none">ocultar filtros</div>
       </td>
     </tr>
  </table>
   <div id="tips" style="color:gray; height:10px; padding: 0 0 20px 0"><small><strong>Tip:</strong> Puede ingresar alguna porci&oacute;n del nombre de la localidad.</small></div>







   
</div>

<% @productos.each do |producto| %>
  <tr>
    <td><%=h producto.nombre %></td>
    <td><%= link_to 'Show', producto %></td>
    <td><%= link_to 'Edit', edit_producto_path(producto) %></td>
    <td><%= link_to 'Destroy', producto, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>

<br />

<%= link_to 'New producto', new_producto_path %>


<script type="text/javascript">
   $(document).ready(function(){
    $('.filtros').hide();
    $('.ocultar_filtros').hide();
    ocultar_filtros();

    })

  function ver_filtros(){
    $('.filtros').show();
    $('#ocultar_filtros').show();
     $('#ver_filtros').hide();
  }

  function ocultar_filtros(){
    $('.filtros').hide();
    $('#ocultar_filtros').hide();
    $('#ver_filtros').show();

  }


</script>

